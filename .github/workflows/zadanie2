#include <stdio.h>
int secuenc_calc(int n){
    if(n <= 1){
        return 1;
    }
    if(n % 2 == 0){
        return secuenc_calc(n / 2) +2;
    }else{
        return secuenc_calc(n - 1) *3;
    }
}
int main(){
    int n;
    if(scanf("%d", &n) == 1){
        int wynik = secuenc_calc(n);
        printf("%d\n", wynik);
    }
    return 0;
}
