#include <stdio.h>
int text_processor(const char *str){
    int total = 0;
    int sign = 1;

    for (int i = 0; str[i] != '\0'; i++){
        char c = str[i];
        if (c >= 'A' && c <= 'Z'){
            total += 10 * sign;
        }else if(c >= '0' && c <= '9'){
            if((c- '0') % 2 == 0){
                sign = 1;
            }else{
                sign = -1;
            }
        }else if (c == '!'){
            total = 0;
        }
    }
    return total;
}
int main(void){
    char tekst[100];
    printf("Podaj tekst do przetworzenia: ");
    scanf("%99s", tekst);
    int wynik = text_processor(tekst);
    printf("Wynik %d\n", &wynik);

    return 0;
}
